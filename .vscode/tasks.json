{
    "tasks": [
        {
            "type":"shell",
            "label":"创建bin文件夹",
            "command":" if [ ! -d \"bin\" ];then mkdir bin;fi"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "创建bin文件夹",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}